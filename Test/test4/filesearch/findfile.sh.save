#!/bin/bash

echo "Enter file name:"
read filename

# 1 Check if file exists (any path given)
if [ -e "$filename" ]; then
    echo "1. File exists (given path)."
else
    echo "1. File does NOT exist (given path)."
fi

# 2 Check if file exists in current directory
if [ -f "./$filename" ]; then
    echo "2. File exists in current directory."
else
    echo "2. File does NOT exist in current directory."
fi

echo "Searching entire system (this may take time)..."

found=$(find / -type f -name "$filename" 2>/dev/null)

if [ -n "$found" ]; then
    echo "3. File found in system at:"
    echo "$found"
else
    echo "3. File NOT found anywhere in system."
fi
